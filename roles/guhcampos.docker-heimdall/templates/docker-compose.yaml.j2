---
services:
  heimdall:
    container_name: "heimdall"
    image: "{{heimdall_docker_image}}"
    restart: unless-stopped

    environment:
      - PUID={{heimdall_unix_user_id}}
      - PGID={{heimdall_unix_group_id}}
      - UMASK={{heimdall_unix_umask}}
      {% for key,value in heimdall_docker_env.items() -%}
      - {{key}}={{value}}
      {% endfor +%}

    ports:
      {% for port in heimdall_docker_ports -%}
      {% if port != "" -%}
      - {{port}}
      {% endif -%}
      {%- endfor +%}

    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      {% for volume in heimdall_docker_volumes -%}
      {% if volume != "" -%}
      - "{{volume}}"
      {% endif -%}
      {%- endfor %}
{% for volume in heimdall_docker_volumes_extra -%}
      {% if volume != "" -%}
      - "{{volume.src}}:{{volume.dst}}"
      {% endif -%}
      {%- endfor +%}

networks:
  default:
    name: "{{heimdall_docker_network_name}}"
    external: true
