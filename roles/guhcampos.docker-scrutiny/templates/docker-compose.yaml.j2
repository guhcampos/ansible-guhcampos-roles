---
services:
  scrutiny:
    container_name: "scrutiny"
    image: "{{scrutiny_docker_image}}"
    restart: unless-stopped

    environment:
      - PUID={{scrutiny_unix_user_id}}
      - PGID={{scrutiny_unix_group_id}}
      - UMASK={{scrutiny_unix_umask}}
      {% for key,value in scrutiny_docker_env.items() -%}
      - {{key}}={{value}}
      {% endfor +%}

    ports:
      {% for port in scrutiny_docker_ports -%}
      {% if port != "" -%}
      - {{port}}
      {% endif -%}
      {%- endfor +%}

    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      {% for volume in scrutiny_docker_volumes -%}
      {% if volume != "" -%}
      - "{{volume}}"
      {% endif -%}
      {%- endfor %}
{% for volume in scrutiny_docker_volumes_extra -%}
      {% if volume != "" -%}
      - "{{volume.src}}:{{volume.dst}}"
      {% endif -%}
      {%- endfor +%}

networks:
  default:
    name: "{{scrutiny_docker_network_name}}"
    external: true
