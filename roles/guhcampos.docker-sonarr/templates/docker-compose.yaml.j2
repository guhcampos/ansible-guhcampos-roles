---
services:
  sonarr:
    container_name: "sonarr"
    image: "{{sonarr_docker_image}}"
    restart: unless-stopped

    environment:
      - PUID={{sonarr_unix_user_id}}
      - PGID={{sonarr_unix_group_id}}
      - UMASK={{sonarr_unix_umask}}
      {% for key,value in sonarr_docker_env.items() -%}
      - {{key}}={{value}}
      {% endfor +%}

    ports:
      {% for port in sonarr_docker_ports -%}
      {% if port != "" -%}
      - {{port}}
      {% endif -%}
      {%- endfor +%}

    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      {% for volume in sonarr_docker_volumes -%}
      {% if volume != "" -%}
      - "{{volume}}"
      {% endif -%}
      {%- endfor %}
{% for volume in sonarr_docker_volumes_extra -%}
      {% if volume != "" -%}
      - "{{volume.src}}:{{volume.dst}}"
      {% endif -%}
      {%- endfor +%}

networks:
  default:
    name: "{{sonarr_docker_network_name}}"
    external: true
