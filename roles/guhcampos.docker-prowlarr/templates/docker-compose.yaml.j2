---
services:
  prowlarr:
    container_name: "prowlarr"
    image: "{{prowlarr_docker_image}}"
    restart: unless-stopped

    environment:
      - PUID={{prowlarr_unix_user_id}}
      - PGID={{prowlarr_unix_group_id}}
      - UMASK={{prowlarr_unix_umask}}
      {% for key,value in prowlarr_docker_env.items() -%}
      - {{key}}={{value}}
      {% endfor +%}

    ports:
      {% for port in prowlarr_docker_ports -%}
      {% if port != "" -%}
      - {{port}}
      {% endif -%}
      {%- endfor +%}

    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      {% for volume in prowlarr_docker_volumes -%}
      {% if volume != "" -%}
      - "{{volume}}"
      {% endif -%}
      {%- endfor %}
{% for volume in prowlarr_docker_volumes_extra -%}
      {% if volume != "" -%}
      - "{{volume.src}}:{{volume.dst}}"
      {% endif -%}
      {%- endfor +%}

networks:
  default:
    name: "{{prowlarr_docker_network_name}}"
    external: true
