---
services:
  grafana:
    container_name: "grafana"
    image: "{{grafana_docker_image}}"
    restart: unless-stopped

    environment:
      - PUID={{grafana_unix_user_id}}
      - PGID={{grafana_unix_group_id}}
      - UMASK={{grafana_unix_umask}}
      {% for key,value in grafana_docker_env.items() -%}
      - {{key}}={{value}}
      {% endfor +%}

    ports:
      {% for port in grafana_docker_ports -%}
      {% if port != "" -%}
      - {{port}}
      {% endif -%}
      {%- endfor +%}

    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      {% for volume in grafana_docker_volumes -%}
      {% if volume != "" -%}
      - "{{volume}}"
      {% endif -%}
      {%- endfor %}
{% for volume in grafana_docker_volumes_extra -%}
      {% if volume != "" -%}
      - "{{volume.src}}:{{volume.dst}}"
      {% endif -%}
      {%- endfor +%}

networks:
  default:
    name: "{{grafana_docker_network_name}}"
    external: true
