---
services:
  qbittorrent:
    container_name: "qbittorrent"
    image: "{{qbittorrent_docker_image}}"
    restart: unless-stopped

    environment:
      - PUID={{qbittorrent_unix_user_id}}
      - PGID={{qbittorrent_unix_group_id}}
      - UMASK={{qbittorrent_unix_umask}}
      {% for key,value in qbittorrent_docker_env.items() -%}
      - {{key}}={{value}}
      {% endfor +%}

    ports:
      {% for port in qbittorrent_docker_ports -%}
      {% if port != "" -%}
      - {{port}}
      {% endif -%}
      {%- endfor +%}

    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      {% for volume in qbittorrent_docker_volumes -%}
      {% if volume != "" -%}
      - "{{volume}}"
      {% endif -%}
      {%- endfor %}
{% for volume in qbittorrent_docker_volumes_extra -%}
      {% if volume != "" -%}
      - "{{volume.src}}:{{volume.dst}}"
      {% endif -%}
      {%- endfor +%}

networks:
  default:
    name: "{{qbittorrent_docker_network_name}}"
    external: true
